{
  "name": "nebula-nv",
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "check-types": "turbo run check-types",
    "proto:gen": "node ./scripts/proto-gen.mjs",
    "proto:check": "node ./scripts/proto-gen.mjs --check",
    "prisma:gen:services": "pnpm -r -F @nebula/settings-service -F @nebula/product-service -F @nebula/user-service exec prisma generate -- --schema ./prisma/schema.prisma",
    "prisma:migrate:services": "pnpm -r --workspace-concurrency=1 -F @nebula/settings-service -F @nebula/product-service -F @nebula/user-service exec prisma migrate dev -- --schema ./prisma/schema.prisma",
    "db:deploy": "pnpm -F @nebula/auth-service prisma:migrate:deploy && pnpm -F @nebula/user-service prisma:migrate:deploy && pnpm -F @nebula/product-service prisma:migrate:deploy && pnpm -F @nebula/settings-service prisma:migrate:deploy"
  },
  "devDependencies": {
    "@eslint/js": "^9.34.0",
    "@types/bcrypt": "^5.0.2",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.15.3",
    "@types/supertest": "^6.0.2",
    "eslint": "^9.34.0",
    "globals": "^16.0.0",
    "jest": "^29.7.0",
    "nx": "^21.3.2",
    "prettier": "^3.6.0",
    "prisma": "6.11.1",
    "proto": "^1.0.19",
    "protoc": "^1.1.3",
    "ts-jest": "^29.4.0",
    "ts-node": "^10.9.2",
    "ts-proto": "^2.7.5",
    "tsconfig-paths": "^4.2.0",
    "turbo": "^2.5.4",
    "typescript": "5.8.2"
  },
  "dependencies": {
    "@bufbuild/protobuf": "^2.6.2",
    "@grpc/grpc-js": "^1.13.4",
    "@grpc/proto-loader": "^0.7.15",
    "@nestjs/common": "11.1.5",
    "@nestjs/config": "^4.0.2",
    "@nestjs/core": "11.1.5",
    "@nestjs/jwt": "^11.0.0",
    "@nestjs/microservices": "11.1.5",
    "@nestjs/platform-express": "11.1.5",
    "@prisma/client": "6.11.1",
    "bcrypt": "^6.0.0",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.2",
    "express": "^5.1.0",
    "joi": "^17.13.3",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.2"
  },
  "packageManager": "pnpm@9.0.0",
  "engines": { "node": ">=18" },
  "pnpm": {
    "overrides": {
      "@nestjs/common": "11.1.5",
      "@nestjs/core": "11.1.5",
      "@nestjs/microservices": "11.1.5",
      "@nestjs/platform-express": "11.1.5",
      "@nestjs/testing": "11.1.5",
      "prisma": "6.11.1",
      "@prisma/client": "6.11.1"
    }
  }
}
