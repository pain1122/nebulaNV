generator client {
  provider      = "prisma-client-js"
  output        = "./generated"
  binaryTargets = ["native", "linux-musl"]
}

datasource db {
  provider          = "postgresql"
  url               = env("DATABASE_URL")
  shadowDatabaseUrl = env("SHADOW_DATABASE_URL")
}


enum OrderStatus {
  PENDING
  PAID
  FULFILLED
  CANCELLED
}

model Order {
  id            String      @id @default(uuid()) @db.Uuid
  orderNumber   String      @unique
  userId        String      @db.Uuid
  status        OrderStatus @default(PENDING)

  // align with Product.currency default
  currency      String      @default("EUR")

  // use same precision as Product.price
  subtotal      Decimal     @db.Decimal(18, 2)
  discountTotal Decimal     @db.Decimal(18, 2) @default(0)
  taxTotal      Decimal     @db.Decimal(18, 2) @default(0)
  total         Decimal     @db.Decimal(18, 2)

  shippingAddress Json?
  billingAddress  Json?
  meta            Json?

  items         OrderItem[]

  createdAt     DateTime    @default(now())
  updatedAt     DateTime    @updatedAt
}

model Cart {
  id        String    @id @default(uuid()) @db.Uuid
  userId    String    @unique @db.Uuid

  // align default with product currency
  currency  String    @default("EUR")

  items     CartItem[]
  expiresAt DateTime?

  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt

  @@index([expiresAt])
}

model OrderItem {
  id         String   @id @default(uuid()) @db.Uuid
  orderId    String   @db.Uuid
  order      Order    @relation(fields: [orderId], references: [id])

  productId  String   @db.Uuid
  sku        String?
  name       String
  quantity   Int

  // same precision as Product.price
  unitPrice  Decimal  @db.Decimal(18, 2)
  lineTotal  Decimal  @db.Decimal(18, 2)

  meta       Json?

  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  @@index([orderId])
}

model CartItem {
  id        String   @id @default(uuid()) @db.Uuid
  cartId    String   @db.Uuid
  cart      Cart     @relation(fields: [cartId], references: [id])

  productId String   @db.Uuid
  sku       String?
  name      String
  quantity  Int

  // same precision as Product.price
  unitPrice Decimal  @db.Decimal(18, 2)

  meta      Json?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([cartId])
}
