{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "target": "ES2021",            
    "lib": ["ES2021"],             
    "module": "CommonJS",          
    "outDir": "./dist",
    "baseUrl": ".",
    "paths": {
      "@utils/*": ["src/utils/*"]
    },
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "skipLibCheck": true,
    "declaration": true
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist", "test", "**/*.spec.ts"]
}