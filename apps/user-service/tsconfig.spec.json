{
    "extends": "./tsconfig.json",
    "compilerOptions": {
        "types": [
            "jest",
            "node"
        ],
        "module": "commonjs",
        "moduleResolution": "node",
        "esModuleInterop": true,
        "baseUrl": "./",
        "paths": {
            "@/*": [
                "src/*"
            ]
        },
        "skipLibCheck": true
    },
    "include": [
        "src/**/*.ts",
        "test/**/*.ts",
        "test/**/*.d.ts"
    ]
}