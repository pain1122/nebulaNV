{
    "compilerOptions": {
        "baseUrl": ".",
        "paths": {
            "@nebula/protos/*": ["packages/protos/generated/*"],
            "@apps/*": ["apps/*/src"],
            "@packages/*": ["packages/*/dist"]
        },
        "typeRoots": [
        "./types",
        "./node_modules/@types"
        ],
        "lib": [
            "ES2021"
        ],
        "rootDir": ".",
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "target": "ES2021",
        "module": "CommonJS",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "declaration": true,
        "outDir": "dist"
    },
    "exclude": ["node_modules", "dist", "test", "**/*.spec.ts"]
}